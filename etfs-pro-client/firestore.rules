rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents
    match /users/{userId} {
      // Symbol limits
      function freeLimit() {
        return 15;
      }
      function premiumLimit() {
        return 1000;
      }

      // Check if watchlist is valid (is a list and within size limit)
      function isValidWatchlist(watchlist, isPremium) {
        let limit = isPremium ? premiumLimit() : freeLimit();
        return watchlist is list && watchlist.size() <= limit;
      }

      // Users can read their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can create their own document on first sign-in
      allow create: if request.auth != null && request.auth.uid == userId
        && request.resource.data.isPremium == false
        && request.resource.data.email == request.auth.token.email
        && isValidWatchlist(request.resource.data.watchlist, false);

      // Users can update their own document
      // Only re-validate watchlist when it actually changes
      allow update: if request.auth != null && request.auth.uid == userId
        && (request.resource.data.watchlist == resource.data.watchlist
            || isValidWatchlist(request.resource.data.watchlist, request.resource.data.isPremium));

      // Portfolio subcollection - premium only for writes
      match /portfolio/{symbol} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update, delete: if request.auth != null
          && request.auth.uid == userId
          && get(/databases/$(database)/documents/users/$(userId)).data.isPremium == true;
      }
    }

    // Stripe extension: customer data
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    // Stripe extension: products and prices (public read)
    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
